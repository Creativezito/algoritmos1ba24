programa {
  funcao inicio() {
    
    //Declaração de Variaveis
    real n1, n2, soma

    //Entrada de Informações
    escreva("Digite o Primeiro Número: ")
    leia(n1)
    escreva("Digite o Segundo Numero: ")
    leia(n2)
    
    //Processamento
    soma = n1 + n2

    //Saida
    escreva("A soma é: ", soma)
  }
}
